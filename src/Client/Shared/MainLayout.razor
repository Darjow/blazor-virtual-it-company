@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            <CustomErrorBoundary @ref="@errorBoundary" Context="Exception">
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <div class="alert bg-danger text-white alert-dismissible">
                        <p>@Exception.Message</p>
                        <button class="btn-close" @onclick="errorBoundary.Recover" data-bs-dismiss="alert"/>
                    </div>
                </ErrorContent>
            </CustomErrorBoundary>
        </article>
        <Sidepanel/>
    </main>
</div>

@code{
    private ErrorBoundary errorBoundary;
}